{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext"],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowJs": true,
    "noEmit": true,
    "sourceMap": false,
    "inlineSourceMap": false,
    "moduleResolution": "node",
    "outDir": "dist",
    "types": [
      "bun-types" // add Bun global
    ]
  },
  "exclude": ["tests", "node_modules", "dist"]
}
